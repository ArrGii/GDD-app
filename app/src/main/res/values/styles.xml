<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="android:editTextColor">@color/colorPlainText</item>
        <item name="android:textColor">@color/colorPlainText</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="buttonStyle">@style/ButtonCustomStyle</item>
    </style>

    <style name="ButtonText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonCustomStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textViewStyle">@style/TextButton</item>
    </style>

    <style name="TextView">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:color">@color/colorTextGray</item>
    </style>

    <style name="ButtonCustomAbove" parent="ButtonCustomStyle">
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:textColor">@color/colorButtonAboveText</item>

    </style>

    <style name="ButtonCustomBelow" parent="ButtonCustomStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorButtonBelowText</item>
    </style>

    <style name="TextHint">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:capitalize">characters</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextButton">
        <item name="android:gravity">center</item>
        <item name="android:height">16dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">1.25</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:width">248dp</item>
    </style>

</resources>
