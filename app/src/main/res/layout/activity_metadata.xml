<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.metadata.MetadataActivity">

    <TextView
            android:text="@string/metadata_section_desease_title"
            android:id="@+id/metadata_section_desease"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="20dp"
            style="@style/TextHint"/>

    <androidx.recyclerview.widget.RecyclerView
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:orientation="vertical"
                                               android:id="@+id/recyclerView"
                                               android:divider="#b5b5b5"
                                               android:layout_marginTop="58dp"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintTop_toBottomOf="@+id/metadata_section_desease"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:descendantFocusability="beforeDescendants"
                                               />

</androidx.constraintlayout.widget.ConstraintLayout>