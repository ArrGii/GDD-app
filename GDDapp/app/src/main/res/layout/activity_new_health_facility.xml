<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewHealthFacilityActivity">

    <TextView
            android:text="@string/text_health_facility_name_hint"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:id="@+id/text_health_facility_name_hint" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="textStart" android:capitalize="characters" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:textAllCaps="true" android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_health_facility_name_field" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/text_health_facility_name_hint"
            app:layout_constraintEnd_toEndOf="@+id/button_save_new_health_facility"
            app:layout_constraintStart_toStartOf="@+id/button_save_new_health_facility"
            android:hint="Hospital name"/>
    <Button
            android:text="Register new hospital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_save_new_health_facility"
            android:capitalize="none"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_cancel_new_health_facility"
            style="@style/ButtonCustomAbove"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancel_new_health_facility"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@+id/button_save_new_health_facility"
            app:layout_constraintStart_toStartOf="@+id/button_save_new_health_facility"
            style="@style/ButtonCustomBelow"/>
</androidx.constraintlayout.widget.ConstraintLayout>